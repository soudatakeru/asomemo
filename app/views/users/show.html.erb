<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <%= render partial:'relationships/follow_button', user: @user %>
      <h2 class="page-heading">
        <%= "#{current_user.nickname}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">ニックネーム</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">職種</th>
            <td class="table__col2"><%= @user.occupation %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{current_user.nickname}さんの投稿"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'events/event', collection: @events %>
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <% if @favorite_list.present? %> 
          <% @favorite_list.each do |event| %>
            <%= link_to event.name, event_path(event.id) %>
          <% end %>
        <% end %> 
      </div>
    </div>
  </div>
</div>