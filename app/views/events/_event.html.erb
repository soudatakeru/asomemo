<div class="card">
  <div class="event">
    <% event.images.each do |image| %>
      <%= image_tag image, class:'images' %>
      <% break %>
    <% end %>
  </div>
  <div class="card__body">
    <%= link_to event.name, root_path, class: :card__title%>
    <p class="card__summary">
      <%= "プロトタイプのキャッチコピー" %>
    </p>
    <%= link_to event.user.nickname, root_path, class: :card__user %>
  </div>
</div>