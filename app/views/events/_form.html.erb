<%= form_with(model:@event, local: true) do |f|%>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :name, "イベント名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :explanation, "説明" %><br />
    <%= f.text_area :explanation, class: :form__text %>
  </div>
    施設種類
  <div class="field">
    <%= f.collection_select(:facility_id, Facility.all, :id, :name, {}, {class:"select-box"}) %>
  </div>
    規模
  <div class="field">
    <%= f.collection_select(:scale_id, Scale.all, :id, :name, {}, {class:"select-box"}) %>
  </div>
    カテゴリー
  <div class="field">
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box"}) %>
  </div>

  <div class="field">
    <%= f.label :volunteer, "ボランティア(任意)" %><br />
    <%= f.text_area :volunteer, class: :form__text %>
  </div>

  <div class="field">
    <%= f.file_field :images, name: 'event[images][]', id: 'event_image' %>
    <div id="image-list"></div>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
    
  </div>
<% end %>